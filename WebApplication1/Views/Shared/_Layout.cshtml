@using WebApplication1.Enums
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header style="background-color: #478778;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">WheelsOnDemand</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav flex-grow-1"></div>
                    <ul class="navbar-nav">
                        @{
                            if (Context.Session.GetInt32("UserId") > 0)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="RentingFilterForm" data-bs-toggle="tooltip" title="Rent fileter">
                                        <i class="fas fa-sliders-h"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="BookingHistory" data-bs-toggle="tooltip" title="Bookings">
                                        <i class="fas fa-calendar-alt"></i> 
                                    </a>
                                </li>
                                @if (Context.Session.GetInt32("Role") == (int)RoleType.Driver)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="RequestHistory" data-bs-toggle="tooltip" title="Requests">
                                            <i class="fas fa-calendar-check"></i> 
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="AddVehicle" data-bs-toggle="tooltip" title="Add vehicle">
                                            <i class="fas fa-plus-square"></i>                                    
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="GetVehicleForUser" data-bs-toggle="tooltip" title="Vehicle list">
                                            <i class="fa-solid fa-car"></i>
                                        </a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Logout" asp-action="Index" data-bs-toggle="tooltip" title="Logout">
                                        <i class="fas fa-sign-out-alt"></i>                                        
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index" data-bs-toggle="tooltip" title="Login">
                                        <i class="fas fa-sign-in-alt"></i>                                 
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Register" asp-action="Index" data-bs-toggle="tooltip" title="Register">
                                        <i class="fas fa-user-plus"></i>                            
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#478778">
        <div class="container text-white">
            &copy; 2025 - WebApplication1 - Privacy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>